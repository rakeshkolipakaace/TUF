 for (int i = 0; i < n; i++) {
        int start = (i % 2 == 0) ? 1 : 0;  // Start with 1 for even rows and 0 for odd rows
        for (int j = 0; j <= i; j++) {
            cout << start << " ";  // Print the current value (1 or 0)
            start = 1 - start;  // Toggle between 1 and 0
        }
        cout << endl;
    }



/*

output:

1
0 1
1 0 1



*/