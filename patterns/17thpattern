void alphaHill(int n) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n - i; j++) {
            cout << " ";
        }
        for (char ch = 'A'; ch < 'A' + i; ch++) {
            cout << ch << " ";
        }
        for (char ch = 'A' + i - 2; ch >= 'A'; ch--) {
            cout << ch << " ";
        }
        cout << endl;
    }


    // Write your code here.
}


/*
Output:
    A
  A B A
A B C B A


*/
